list2 = [1, 2, 3]
list3 = list1 + list2
print(list3)
#aqui se sumans 2 listas para haser otra
for x in list2:
  list1.append(x)
print(list1)
#aqui se integra una lista a la otra sin nesidad de crear una nueva
list1.extend(list2)
print(list1)
