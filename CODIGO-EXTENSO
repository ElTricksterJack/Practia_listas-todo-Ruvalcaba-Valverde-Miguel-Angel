print("-----------Lista en bulce-------------")
thislist = ["apple", "banana", "cherry"," "]
for x in thislist:
  print(x)
#con esto muestra los items de la lista 1 por 1
for i in range(len(thislist)):
  print(thislist[i])
#es lo mismo pero usando el numero de indise, mas diria que es mas complejo
i = 0
while i < len(thislist):
  print(thislist[i])
  i = i + 1
#lo mismo pero con while y mas complejo
[print(x) for x in thislist]
