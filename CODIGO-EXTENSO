    case 1:
        print("Frutas comunes:",CO)
        print(type(CO))
        print("Las mejores son la",CO[0],"y",CO[4])
    case 2:
        print("Frutas poco comunes:",PCO)
        print(type(PCO))
        print("Las mejores son la",PCO[2],"y",PCO[4])
    case 3:
        print("Frutas raras:",RA)
        print(type(RA))
        print("Las mejores son la",RA[0],"y",RA[4])
    case 4:
        print("Frutas legendaryas:",LE)
        print(type(LE))
        print("Las mejores para mi son",LE[1],"y",LE[6],"aqui es mas difisil")
    case 5:
        print("Frutas myticas:",MY)
        print(type(MY))
        print("La mejor es la",MY[10],"Por ahora, esperen a la",MY[8],"Rework")
    case 6:
        print("Lista de numeros:",NUM)
        print(type(NUM))
    case _:
        print("ERROR")
